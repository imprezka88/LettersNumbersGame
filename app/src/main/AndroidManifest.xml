<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.kiddodemiddo.lettersgame">

    <application
            android:name="com.kiddodemiddo.lettersgame.LettersGameApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:debuggable="true"
            android:theme="@style/AppTheme">
        <activity
                android:name="com.kiddodemiddo.lettersgame.main.MainScreenActivity"
                android:screenOrientation="landscape"
                android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
                >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.kiddodemiddo.patterngame.game.GameActivity"
                android:label="Letters and Numbers"
                android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
                android:screenOrientation="landscape"
                >
        </activity>
        <activity
                android:name="com.kiddodemiddo.patterngame.learning.LearningGameActivity"
                android:label="Learning Game"
                android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
                android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>
